<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/btnSettingsBack"
        style="@style/SettingsBackBtnStyle"
        android:background="@null"
        android:outlineProvider="none"
        android:text="@string/search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="start|center_vertical"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="36dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/settingsTextSize"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="13dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/clearImageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="13dp"
            android:background="@drawable/edit_text_rounded_bg"
            android:src="@drawable/ic_clear"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="1"
        tools:listitem="@layout/layout_track" />

    <FrameLayout
        android:id="@+id/noInternet"
        style="@style/error_frameLayout"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        >

        <ImageView
            android:id="@+id/imageViewNoInternet"
            style="@style/error_image"
            android:src="@drawable/ic_no_internet" />
        <TextView
            android:id="@+id/textViewNoInternet"
            style="@style/error_text"
            android:layout_width="match_parent"
            android:layout_marginTop="140dp"
            android:text="@string/noInternet" />
        <Button
            android:id="@+id/refresh"
            style="@style/RefreshBtnStyle"
            android:layout_marginTop="80dp"
            android:background="@drawable/button"
            app:backgroundTint="@color/icon_color1"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/noResults"
        style="@style/error_frameLayout"
        android:layout_marginTop="90dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/imageViewNoResults"
            style="@style/error_image"
            android:src="@drawable/ic_no_results" />
        <TextView
            android:id="@+id/textViewNoResults"
            style="@style/error_text"
            android:layout_marginTop="120dp"
            android:text="@string/NoResults" />
    </FrameLayout>

</LinearLayout>