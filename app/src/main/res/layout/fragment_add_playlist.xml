<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PlaylistAddFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white">

    <Button
        android:id="@+id/newPlaylist"
        style="@style/playerBackBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="Новый плейлист"
        android:textColor="@color/main_black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/PL_add_photo"
        android:layout_width="312dp"
        android:layout_height="312dp"
        android:layout_below="@id/newPlaylist"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/border_dash"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_add_photo" />

    <EditText
        android:id="@+id/PL_title"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/PL_add_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="start|center_vertical"
        android:hint="Название*"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:singleLine="true"
        android:textColor="@color/main_black"
        android:textColorHint="@color/gray"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/PL_description"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/PL_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="start|center_vertical"
        android:hint="Описание"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:singleLine="true"
        android:textColor="@color/main_black"
        android:textColorHint="@color/gray"
        android:textSize="16dp" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="326dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:text="Создать"
        />

</RelativeLayout>