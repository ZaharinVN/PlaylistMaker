<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:id="@+id/trackList"
        style="@style/RelativeLayoutStyle">

        <ImageView
            android:id="@+id/track_artwork"
            style="@style/SearchImageStyle"/>

        <TextView
            android:id="@+id/track_name"
            android:layout_width="250dp"
            android:layout_height="19dp"
            android:text="Track Name"
            android:textSize="16sp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="1dp"
            android:gravity="top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/track_name"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/dot" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="54dp"
            android:layout_height="13dp"
            android:text="Artist Name"
            android:textSize="11sp"
            android:layout_below="@id/track_name"
            android:layout_marginLeft="66dp"
 />

        <TextView
            android:id="@+id/track_time"
            android:layout_width="64dp"
            android:layout_height="13dp"
            android:text="Track Time"
            android:textSize="11sp"
            android:layout_below="@id/track_name"
            android:layout_marginLeft="133dp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/searchImgLayMTop"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_terms_of_use" />

    </RelativeLayout>

</RelativeLayout>